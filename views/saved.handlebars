<div class="container">
    <div class="row">
        <a href="/">Home</a>
        <div class="col-md-6" id="saved">
            {{#each saved}}
            <div class="article">
                <h2 class="headline">{{headline}}</h2>
                <ul>
                    <li>{{summaryOne}}</li>
                    <li>{{summaryTwo}}</li>
                </ul>
                <a href={{link}}>Full Story</a>
                {{!-- <form action="/update" method="PUT" id="delete-article">
                    <input type="hidden" name="id" value={{_id}}>
                    <button class="btn btn-danger btn-sm" type="submit">DELETE</button>
                    <hr />
                </form> --}}
                <form action="/newnote" method="PUT"  id="new-note">
                        <input type="hidden" value={{_id}}>
                        <input type="name" class="form-control" id="message" >
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
            {{/each}}
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $("#new-note").on("submit", function (event) {
            event.preventDefault();
            console.log("new note");
            var id = $(this).children().val();
            var newNote = $("#message").val();
            console.log(id);
            console.log(newNote);
            var data = {
                _id: id,
                note: newNote
            }
            $.ajax("/update/" + id, {
                type: "PUT",
                data: data
            })

        });
    });
</script>