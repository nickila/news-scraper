<div class="container">
    <div class="row">
        <div class="col-md-6">
            <a href="#">Saved Articles</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <h1 id="title">NEWS SCRAPER IS GO</h1>
            <button id="scrapeBtn">SCRAPE</button>
            <div id="articles">
                {{#each dbArticle}}
                <div class="article">
                    <h2 class="headline">{{headline}}</h2>
                    <ul>
                        <li>{{summaryOne}}</li>
                        <li>{{summaryTwo}}</li>
                    </ul>
                    <p>{{_id}}</p>
                    <a href={{link}}>Full Story</a>
                    <form action="/update" method="PUT">
                        <input type="hidden" name="id" id="save-article" value={{_id}}>
                        <button class="btn btn-warning btn-sm"  type="submit">{{_id}}</button>
                        <hr />
                    </form>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {

        $("#scrapeBtn").on("click", function (event) {
            event.preventDefault();
            $.get("/newscrape", function (data) {
                location.reload();
            });
        });

        $("#save-article").on("click", function (event) {
            event.preventDefault();
            console.log("save it!");
            var id = $(this).val();
            console.log(id);
            var newSavedState = {
                saved: true
            }
            $.ajax("/update/" + id, {
                type: "PUT",
                data: newSavedState
            }).then(function () {
                $(document).ajaxStop(function () {
                    window.location.reload();
                });
            })
        });
    });
</script>