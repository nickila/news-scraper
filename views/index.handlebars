<div class="container">
    <div class="row">
        <div class="col-md-12" id="titleDiv">
            <h1 id="title">NYTIMES SCRAPER</h1>
        </div>
        <a href="/saved" class="upper-link">SAVED ARTICLES </a>
        <a href="https://www.nytimes.com" class="upper-link"> NYTIMES.COM</a>
        <button id="scrapeBtn">SCRAPE</button>

    </div>
    <hr class="white-underline">
    <div class="row">
        {{#each result}}
        {{#unless saved}}
        <div class="col-md-6">
            <div id="articles">
                
                
                <div class="article">
                    <h2 class="headline">{{headline}}</h2>
                    <ul>
                        <li class="summary">{{summaryOne}}</li>
                        <li class="summary">{{summaryTwo}}</li>
                    </ul>
                    <hr>
                    <a href={{link}} class="link">Full Story</a>
                    <form action="/update" method="PUT" id="save-article">
                        <input type="hidden" name="id" value={{_id}}>
                        <button class="btn btn-warning btn-sm" type="submit">SAVE</button>
                        
                    </form>
                </div>
                
            </div>
        </div>
        {{/unless}}
                {{/each}}
    </div>
</div>




<script>
    $(document).ready(function () {

        $("#scrapeBtn").on("click", function (event) {
            event.preventDefault();
            $.get("/newscrape", function (data) {
                location.reload();
            });
        });

        $("#save-article").on("click", function (event) {
            event.preventDefault();
            console.log("save it!");
            var id = $(this).children().val();
            console.log(id);
            var data = {
                _id: id
            }
            $.ajax("/update/" + id, {
                type: "PUT",
                data: data
            })
            location.reload();
        });
    });
</script>